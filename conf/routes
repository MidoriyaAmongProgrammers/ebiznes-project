
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /products                   controllers.products.ProductController.getProducts
GET     /products/:id               controllers.products.ProductController.getProductById(id: Int)
POST    /products                   controllers.products.ProductController.createProduct
PUT     /products                   controllers.products.ProductController.updateProduct
DELETE  /products/:id               controllers.products.ProductController.deleteProduct(id: Int)


GET     /reviews                    controllers.products.ReviewController.getReviews
GET     /reviews/:id                controllers.products.ReviewController.getReviewById(id: Int)
POST    /reviews                    controllers.products.ReviewController.createReview
PUT     /reviews                    controllers.products.ReviewController.updateReview
DELETE  /reviews/:id                controllers.products.ReviewController.deleteReview(id: Int)

GET     /users                      controllers.users.UserController.getUsers
GET     /users/:id                  controllers.users.UserController.getUserById(id: Int)
POST    /users                      controllers.users.UserController.createUser
PUT     /users                      controllers.users.UserController.updateUser
DELETE  /users/:id                  controllers.users.UserController.deleteUser(id: Int)


GET     /baskets                     controllers.basket.BasketController.getBaskets
GET     /baskets/:id                 controllers.basket.BasketController.getBasketById(id: Int)
POST    /baskets                     controllers.basket.BasketController.createBasket
PUT     /baskets                     controllers.basket.BasketController.updateBasket
DELETE  /baskets/:id                 controllers.basket.BasketController.deleteBasket(id: Int)


GET     /categories                 controllers.categories.CategoryController.getCategories
GET     /categories/:id             controllers.categories.CategoryController.getCategoryById(id: Int)
POST    /categories                 controllers.categories.CategoryController.createCategory
PUT     /categories                 controllers.categories.CategoryController.updateCategory
DELETE  /categories/:id             controllers.categories.CategoryController.deleteCategory(id: Int)


GET     /subcategories                 controllers.categories.SubCategoryController.getSubCategories
GET     /subcategories/:id             controllers.categories.SubCategoryController.getSubCategoryById(id: Int)
POST    /subcategories                 controllers.categories.SubCategoryController.createSubCategory
PUT     /subcategories                 controllers.categories.SubCategoryController.updateSubCategory
DELETE  /subcategories/:id             controllers.categories.SubCategoryController.deleteSubCategory(id: Int)



GET     /orders                  controllers.orders.OrderController.getOrders
GET     /orders/:id                  controllers.orders.OrderController.getOrderById(id: Int)
POST    /orders                  controllers.orders.OrderController.createOrder
PUT     /orders                  controllers.orders.OrderController.updateOrder
DELETE  /orders/:id         controllers.orders.OrderController.deleteOrder(id: Int)


GET     /coupons                 controllers.orders.CouponController.getCoupons
GET     /coupons/:id              controllers.orders.CouponController.getCouponsById(id: Int)
POST    /coupons                 controllers.orders.CouponController.createCoupon
PUT     /coupons                 controllers.orders.CouponController.updateCoupon
DELETE  /coupons/:id            controllers.orders.CouponController.deleteCoupon(id: Int)


GET     /shipments                 controllers.orders.ShipmentController.getShipments
GET     /shipments/:id                 controllers.orders.ShipmentController.getShipmentById(id: Int)
POST    /shipments                 controllers.orders.ShipmentController.createShipment
PUT     /shipments                   controllers.orders.ShipmentController.updateShipment
DELETE  /shipments/:id     controllers.orders.ShipmentController.deleteShipment(id: Int)

GET     /payments                 controllers.orders.PaymentController.getPayments
GET     /payments/:id             controllers.orders.PaymentController.getPaymentById(id: Int)
POST    /payments                 controllers.orders.PaymentController.createPayment
PUT     /payments                 controllers.orders.PaymentController.updatePayment
DELETE  /payments/:id             controllers.orders.PaymentController.deletePayment(id: Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

