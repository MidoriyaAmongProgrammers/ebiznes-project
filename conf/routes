
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /products                   controllers.products.ProductsController.getProducts
POST    /products                   controllers.products.ProductsController.createProduct
PUT     /products/:productId        controllers.products.ProductsController.updateProduct(productId: String)
DELETE  /products/:productId        controllers.products.ProductsController.deleteProduct(productId: String)


GET     /reviews                    controllers.products.ReviewsController.getReviews
POST    /reviews                    controllers.products.ReviewsController.createReview
PUT     /reviews/:reviewId          controllers.products.ReviewsController.updateReview(reviewId: String)
DELETE  /reviews/:reviewId          controllers.products.ReviewsController.deleteReview(reviewId: String)

GET     /users                      controllers.users.UsersController.getUsers
POST    /users                      controllers.users.UsersController.createUser
PUT     /users/:userId              controllers.users.UsersController.updateUser(userId: String)
DELETE  /users/:userId              controllers.users.UsersController.deleteUser(userId: String)


GET     /basket                     controllers.basket.BasketController.getBasket
POST    /basket                     controllers.basket.BasketController.createBasket
PUT     /basket/:basketId           controllers.basket.BasketController.updateBasket(basketId: String)
DELETE  /basket/:basketId           controllers.basket.BasketController.deleteBasket(basketId: String)


GET     /categories                 controllers.categories.CategoriesController.getCategories
POST    /categories                 controllers.categories.CategoriesController.createCategory
PUT     /categories/:categoryId     controllers.categories.CategoriesController.updateCategory(categoryId: String)
DELETE  /categories/:categoryId     controllers.categories.CategoriesController.deleteCategory(categoryId: String)


GET     /subcategories                 controllers.categories.SubCategoriesController.getSubCategories
POST    /subcategories                 controllers.categories.SubCategoriesController.createSubCategory
PUT     /subcategories/:subcategoryId     controllers.categories.SubCategoriesController.updateSubCategory(subcategoryId: String)
DELETE  /subcategories/:subcategoryId     controllers.categories.SubCategoriesController.deleteSubCategory(subcategoryId: String)



GET     /orders                 controllers.orders.OrdersController.getOrders
POST    /orders                 controllers.orders.OrdersController.createOrder
PUT     /orders/:orderId     controllers.orders.OrdersController.updateOrder(orderId: String)
DELETE  /orders/:orderId     controllers.orders.OrdersController.deleteOrder(orderId: String)


GET     /coupons                 controllers.orders.CouponsController.getCoupons
POST    /coupons                 controllers.orders.CouponsController.createCoupon
PUT     /coupons/:couponId     controllers.orders.CouponsController.updateCoupon(couponId: String)
DELETE  /coupons/:couponId     controllers.orders.CouponsController.deleteCoupon(couponId: String)


GET     /shipments                 controllers.orders.ShipmentsController.getShipments
POST    /shipments                 controllers.orders.ShipmentsController.createShipment
PUT     /shipments/:shipmentId     controllers.orders.ShipmentsController.updateShipment(shipmentId: String)
DELETE  /shipments/:shipmentId     controllers.orders.ShipmentsController.deleteShipment(shipmentId: String)

GET     /payments                 controllers.orders.PaymentsController.getPayments
POST    /payments                 controllers.orders.PaymentsController.createPayment
PUT     /payments/:paymentId     controllers.orders.PaymentsController.updatePayment(paymentId: String)
DELETE  /payments/:paymentId     controllers.orders.PaymentsController.deletePayment(paymentId: String)


# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

